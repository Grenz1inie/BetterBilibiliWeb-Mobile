// B站主题色彩系统
:root
  // 品牌色 - 哔哩粉
  --color-bilibili-pink: #fb7299
  --color-bilibili-pink-light: #ff85a2
  --color-bilibili-pink-dark: #e96287
  
  // 背景色
  --color-bg-primary: #ffffff
  --color-bg-secondary: #f4f4f4
  --color-bg-tertiary: #fafafa
  --color-bg-hover: #f1f2f3
  --color-bg-mask: rgba(0, 0, 0, 0.6)
  
  // 文本色
  --color-text-primary: #18191c
  --color-text-secondary: #61666d
  --color-text-tertiary: #9499a0
  --color-text-disabled: #c9ccd0
  --color-text-white: #ffffff
  
  // 分割线
  --color-border: #e3e5e7
  --color-border-light: #f1f2f3
  
  // 功能色
  --color-success: #00c091
  --color-warning: #ff9800
  --color-danger: #ff6b6b
  --color-info: #00a1d6
  
  // 阴影
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05)
  --shadow-md: 0 2px 8px rgba(0, 0, 0, 0.08)
  --shadow-lg: 0 4px 16px rgba(0, 0, 0, 0.12)
  --shadow-card: 0 2px 4px rgba(0, 0, 0, 0.04)
  
  // 圆角
  --radius-xs: 2px
  --radius-sm: 4px
  --radius-md: 6px
  --radius-lg: 8px
  --radius-xl: 12px
  --radius-round: 50%
  
  // 间距系统 (基于 4px)
  --space-xs: 4px
  --space-sm: 8px
  --space-md: 12px
  --space-lg: 16px
  --space-xl: 20px
  --space-2xl: 24px
  --space-3xl: 32px
  
  // 字体
  --font-size-xs: 10px
  --font-size-sm: 11px
  --font-size-base: 13px
  --font-size-md: 14px
  --font-size-lg: 15px
  --font-size-xl: 16px
  --font-size-2xl: 18px
  --font-size-3xl: 20px
  
  --font-weight-normal: 400
  --font-weight-medium: 500
  --font-weight-bold: 600
  
  --line-height-tight: 1.2
  --line-height-normal: 1.5
  --line-height-relaxed: 1.75
  
  // 过渡动画
  --transition-fast: 0.15s ease
  --transition-base: 0.25s ease
  --transition-slow: 0.35s ease
  
  // Z-index 层级
  --z-header: 1000
  --z-drawer: 1001
  --z-modal: 1002
  --z-toast: 1003

// Stylus 变量（兼容旧代码）
$color-bilibili-pink = #fb7299
$color-bg-primary = #ffffff
$color-text-primary = #18191c
$color-text-secondary = #61666d
$color-text-tertiary = #9499a0
$color-border = #e3e5e7

$space-sm = 8px
$space-md = 12px
$space-lg = 16px

$radius-md = 6px
$radius-lg = 8px

$transition-base = 0.25s ease
