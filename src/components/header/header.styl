@import "../../assets/stylus/_theme.styl"
@import "../../assets/stylus/px2rem.styl"

.header
  display: flex
  align-items: center
  justify-content: space-between
  height: px2rem(44)
  padding: 0 px2rem(12)
  background: linear-gradient(to bottom, #ffffff 0%, #ffffff 90%, rgba(255,255,255,0.95) 100%)
  backdrop-filter: blur(10px)
  box-shadow: var(--shadow-sm)
  position: relative
  z-index: var(--z-header)
  
  .logo
    display: flex
    align-items: center
    width: px2rem(76)
    height: px2rem(32)
    transition: var(--transition-fast)
    
    &:active
      opacity: 0.7
  
  .actions
    display: flex
    align-items: center
    gap: px2rem(12)
  
  .game-icon,
  .search-icon
    display: flex
    align-items: center
    justify-content: center
    width: px2rem(36)
    height: px2rem(36)
    color: var(--color-text-secondary)
    border-radius: var(--radius-round)
    transition: var(--transition-fast)
    cursor: pointer
    
    &:hover
      background-color: var(--color-bg-hover)
      color: var(--color-text-primary)
    
    &:active
      background-color: var(--color-border-light)
  
  .avatar
    display: flex
    align-items: center
    width: px2rem(32)
    height: px2rem(32)
    border-radius: var(--radius-round)
    overflow: hidden
    box-shadow: var(--shadow-sm)
    transition: var(--transition-fast)
    
    svg
      width: 100%
      height: 100%
      border-radius: var(--radius-round)
    
    &:active
      box-shadow: 0 0 0 2px var(--color-bilibili-pink-light)
    