@import "../../assets/stylus/px2rem.styl"

.back-btn
  position: fixed
  left: px2rem(12)
  top: px2rem(6)
  display: flex
  align-items: center
  justify-content: center
  width: px2rem(36)
  height: px2rem(36)
  background: transparent
  border: none
  color: #212121
  border-radius: 50%
  cursor: pointer
  transition: all 0.2s
  z-index: 999
  &:hover
    background-color: rgba(0, 0, 0, 0.05)
  &:active
    background-color: rgba(0, 0, 0, 0.1)

.top-wrapper
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 10
.banner
  padding-top: px2rem(44)
  height: px2rem(130)
  img
    width: 100%
    height: 100%
